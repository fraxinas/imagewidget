<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ImageWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ImageWidget.AppWidgetContainer">

    <!-- ImageView to display the photo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:contentDescription="@string/appwidget_image_content_description"
        android:scaleType="fitCenter" />

    <!-- TextView for captions or titles -->
    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.ImageWidget.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#11AAAAAA"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#AA0000FF"
        android:textSize="6sp"
        android:textStyle="bold" />
</RelativeLayout>
